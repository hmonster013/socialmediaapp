<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:contentPadding="2dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_uAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_default_avatar"/>

        <TextView
            android:id="@+id/txv_uName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/civ_uAvatar"/>

        <TextView
            android:id="@+id/txv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_uName"
            android:layout_toEndOf="@id/civ_uAvatar"
            android:layout_toRightOf="@id/civ_uAvatar"
            android:text="Đây là bình luận"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txv_time"
            android:text="22/10/2023"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txv_comment"
            android:layout_toEndOf="@id/civ_uAvatar"
            android:layout_toRightOf="@id/civ_uAvatar"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>